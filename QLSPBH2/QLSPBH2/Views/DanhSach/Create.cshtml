@model QLSPBH2.tbl_DanhSach

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Thêm Mới</h2>

<form action="/DanhSach/Create" method="post">
    @Html.AntiForgeryToken() <!-- Thêm dòng này để bao gồm token chống giả mạo -->

    <div class="form-group">
        <label>ID</label>
        <input type="text" class="form-control" id="IDDS" name="IDDS" disabled />
    </div>

    <div class="form-group">
        <label>Tên Danh Sách</label>
        <input type="text" class="form-control" id="TenDanhSach" name="TenDanhSach" required />
    </div>

    <div class="form-group">
        <label>Mô Tả</label>
        <input type="text" class="form-control" id="MoTa" name="MoTa" />
    </div>

    <div class="form-group">
        <label>ID Danh Sách Cha</label>
        <select class="form-control" id="IDDanhSachCha" name="IDDanhSachCha">
            <option value="">Danh Sách Gốc</option>
            @foreach (var item in ViewBag.DanhSachChaList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Lưu</button>
</form>
